{
  "name": "duozi-web",
  "version": "0.0.1",
  "description": "Web app tool for early mandarin learners",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "heroku-postbuild": "cd frontend && npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sxubas/duozi-web.git"
  },
  "keywords": [
    "Mongo",
    "React"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sxubas/duozi-web/issues"
  },
  "homepage": "https://github.com/Sxubas/duozi-web#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "eslint": "^5.6.0",
    "eslint-plugin-react": "^7.11.1",
    "express": "^4.16.3",
    "mongodb": "^3.1.4",
    "multer": "^1.3.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-console": 0
    }
  }
}
